<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anton.lspu.account">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_lspu"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_lspu_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ЛичныйКабинетЛГПУ"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".DrawerActivity"
            android:label="@string/title_activity_drawer"
            android:theme="@style/Theme.ЛичныйКабинетЛГПУ.NoActionBar" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.settings.SettingsActivity"
            android:noHistory="true"/>
        <activity android:name=".ui.news.NewsActivity" />
    </application>

</manifest>